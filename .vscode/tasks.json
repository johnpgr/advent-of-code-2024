{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Gradle",
            "type": "shell",
            "command": "gradle run -Pday=${input:dayNumber}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ],
    "inputs": [
        {
            "id": "dayNumber",
            "type": "promptString",
            "description": "Enter the day number:",
            "default": "1"
        }
    ]
}
